<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "sql-map-2.dtd">

<sqlMap namespace="SentEmailBody">
<typeAlias alias="ebody" type="com.archermind.txtbl.domain.Body"/>
	
	<!--add by andy liu start -->
	<insert id="addBody" parameterClass="ebody">
		<![CDATA[insert into txtbl_sentmail_body(emailid,`data`,`comment`)
           values(
            #emailid#,
            #data#,
            #comment#
            )]]>
	</insert>
	
	<select id="getBody" parameterClass="java.util.HashMap" resultClass="ebody">
	<![CDATA[select emailid as emailid, 
	       `data` as `data`,
	       `comment` as `comment`
	from txtbl_sentmail_body]]>
	<dynamic prepend="where">
	    <isNotNull property="emailid">
	    emailid = #emailid#	
	    </isNotNull>
	</dynamic>       
	</select>
	
</sqlMap>